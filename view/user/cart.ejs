    <script>
    function updateQuantityAndSubtotal(productId,newQuantity,index) {        
    fetch(`/updateQuantityAndSubtotal?productId=${productId}&newQuantity=${newQuantity}`, {
            method: 'PUT',
        })
            .then(response => response.json())
            .then(data => {
                if (data.success) {

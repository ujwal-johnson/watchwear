<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Coupon Modal Title</title>

    <!-- Include Bootstrap and jQuery -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZwT" crossorigin="anonymous">

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</head>
<body>

<!-- Add this modal HTML structure at the end of your HTML document, before closing the body tag -->
<div class="modal fade" id="couponModal" tabindex="-1" role="dialog" aria-labelledby="couponModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="couponModalLabel">Available Coupons</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Place your existing coupon display code here -->
                <div class="row">
                    <% if (coupon.length > 0) { 
                        for (let i = 0; i < coupon.length; i++) { %>
                            <!-- ... existing coupon display code ... -->
                        <% } } else { %>
                            <div class="col-6 col-md-4 col-xl-3">
                                <p>No Coupon Found found</p>
                            </div>
                    <% } %>                                    
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
</body>
</html>

<!-- Move this script to the bottom of your HTML document -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.querySelectorAll('.copy-coupon-btn').forEach(function (button) {
            button.addEventListener('click', function () {
                const couponCode = this.dataset.coupon;
                copyToClipboard(couponCode);
            });
        });

        // Function to copy text to clipboard
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(function () {
                Swal.fire({
                    title: 'Copied',
                    text: 'Coupon code copied',
                    background: '#ffffff', 
                    customClass: {
                        popup: 'white-background',
                    },
                    icon: 'success',
                });
            }).catch(function (err) {
                console.error('Unable to copy to clipboard', err);
            });
        }
    });
</script>

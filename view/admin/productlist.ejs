<script>
  function showBlockModal(productId, action) {
    var blockModal = $('#blockModal');
    var confirmButton = $('#blockModalConfirmButton');
    var message = $('#blockModalMessage');

    message.text(`Are you sure you want to ${action.toLowerCase()} this product?`);
    
    // Update the href of the Confirm button based on the action
    confirmButton.attr('href', `/admin/blockproducts?productId=${productId}`);

    blockModal.modal('show');
  }
</script>


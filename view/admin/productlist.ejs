        <div class="col-lg-3 col-sm-3 col-8 col-action text-end justify-content-end">
            <a href="/admin/productedit?productId=<%= products[i]._id %>" class="btn btn-sm font-sm rounded btn-brand">
            <i class="material-icons md-edit"></i> Edit
          </a>
          
          <a href="admin/delete-products?<%= products[i]._id %>" class="btn btn-sm font-sm btn-light rounded">
            <i class="material-icons md-delete_forever"></i> 
          </a>


            <td class="col-lg-2 col-sm-3 col-4 col-action text-end">
            <% if (products[i].is_block === 0) { %>
                <a href="#" class="btn btn-sm font-sm rounded btn-danger" style="background-color: green; border-color: green;" onclick="showBlockModal('<%= products[i]._id %>', 'Block')">        
                    <i class="material-icons md-edit"></i> Block
                </a>
            <% } else { %>
                <a href="#" class="btn btn-sm font-sm rounded btn-danger" onclick="showBlockModal('<%= products[i]._id %>', 'Unblock')">        
                    <i class="material-icons md-edit"></i> Unblock
                </a>
            <% } %>
        </td>

            
        </div>
      </div>
    </article>
  <% } %>

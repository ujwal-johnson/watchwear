   <script>
    function previewImages(inputId) {
        const input = document.getElementById(inputId);
        const previewContainer = document.getElementById(`image-preview-container-${inputId.charAt(inputId.length - 1)}`);

        previewContainer.innerHTML = '';
        const files = input.files;

        for (const file of files) {
            const reader = new FileReader();

            reader.onload = function (e) {
                const previewDiv = document.createElement('div');
                previewDiv.className = 'image-preview';

                const img = document.createElement('img');
                img.src = e.target.result;
                img.alt = file.name;
                img.className = 'preview-image';
                img.width = 80; 
                img.height = 80; 
                previewDiv.appendChild(img);
                previewContainer.appendChild(previewDiv);
            };
            reader.readAsDataURL(file);
        }
        showToastyMessage('Image preview successful!', 'success');

    }
    function showToastyMessage(message, type = 'success') {
        toastr.options = {
            closeButton: true,
            progressBar: true,
            positionClass: 'toast-top-right',
            timeOut: 1000, 
        };

        toastr[type](message);
    }

    // Add an event listener to each file input
    document.getElementById('product_image_0').addEventListener('change', () => previewImages('product_image_0'));
    document.getElementById('product_image_1').addEventListener('change', () => previewImages('product_image_1'));
    document.getElementById('product_image_2').addEventListener('change', () => previewImages('product_image_2'));
    document.getElementById('product_image_3').addEventListener('change', () => previewImages('product_image_3'));
</script>

